<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/color_banner_width"
        android:height="1dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <!-- The middle layer is green circle.-->
    <item
        android:left="@dimen/color_banner_width"
        android:height="1dp"
        android:width="200dp">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="?colorPrimary"
                android:endColor="#00FFFF"
                />
        </shape>
    </item>
</layer-list>
