<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/color_banner"
                android:layout_width="@dimen/color_banner_width"
                android:layout_height="0dp"
                android:background="?colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder_cover"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:id="@+id/title_banner"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/slice_1"
                android:backgroundTint="?colorSecondary"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/image"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/lorem_ipsum"
                android:textAppearance="?textAppearanceHeadline5"
                android:textColor="?colorOnSecondary"
                android:translationZ="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/title_banner"
                app:layout_constraintEnd_toEndOf="@+id/title_banner"
                app:layout_constraintStart_toStartOf="@+id/title_banner"
                app:layout_constraintTop_toTopOf="@+id/title_banner"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/lorem_ipsum_long"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color_banner"
                app:layout_constraintTop_toBottomOf="@+id/title_banner"
                />

            <TextView
                android:id="@+id/moves"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_android_black_24dp"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:drawablePadding="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/lorem_ipsum"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
